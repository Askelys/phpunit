<phpunit>
    <testsuites>
        <testsuite name="test">
            <directory>test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="coverage.xml"/>
        <log type="junit" target="log.xml"/>
    </logging>
</phpunit>